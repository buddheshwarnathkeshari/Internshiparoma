<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContinueAsActivity"
    android:background="@color/dark">



    <TextView
        android:id="@+id/tv_continueas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue as:"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_above="@id/btn_intern"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        />

    <Button
        android:layout_above="@id/center"
        android:id="@+id/btn_intern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="@drawable/btn_continue"
        android:text="Intern/Student"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:onClick="goToIntern"
        android:paddingHorizontal="30dp"
        android:textAllCaps="false"/>

    <View
        android:id="@+id/center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"/>


    <Button
        android:id="@+id/btn_employer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/btn_intern"
        android:layout_marginVertical="25dp"
        android:layout_alignRight="@id/btn_intern"
        android:layout_below="@id/center"
        android:background="@drawable/btn_continue"
        android:text="Employer"
        android:textSize="25dp"
        android:onClick="gotoAsEmployer"
        android:textStyle="normal"
        android:paddingHorizontal="30dp"
        android:textAllCaps="false"/>



</RelativeLayout>