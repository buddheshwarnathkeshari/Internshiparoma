<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white"
    android:weightSum="4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="8dp">
        <TextView
            android:id="@+id/compnaynamechats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="20sp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/online"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="12dp"
            android:background="#41C609"
            android:visibility="gone"
            android:layout_toEndOf="@+id/compnaynamechats"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp">
        <TextView
            android:id="@+id/domainchats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="12sp"
            android:textColor="@color/educationListColor"/>
        <TextView
            android:id="@+id/applieddatechats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="@color/educationListColor"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/lastmessagechats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="12sp"
        android:padding="4dp"
        android:textColor="@color/textColor"
        />
</LinearLayout>