<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowColor"
    tools:context=".resume.JobInternshipTrainingDetails">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="10dp">
       <EditText
           android:id="@+id/profile"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:gravity="center_vertical"
           android:padding="15dp"
           android:layout_margin="10dp"
           android:hint="Profile"
           android:background="@drawable/grey_button_color_changer"
           android:textColor="@color/textColor"/>
       <EditText
           android:id="@+id/organization"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:gravity="center_vertical"
           android:padding="15dp"
           android:layout_margin="10dp"
           android:hint="Organization"
           android:background="@drawable/grey_button_color_changer"
           android:textColor="@color/textColor"/>
       <EditText
           android:id="@+id/location"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:gravity="center_vertical"
           android:padding="15dp"
           android:layout_margin="10dp"
           android:hint="Location"
           android:background="@drawable/grey_button_color_changer"
           android:textColor="@color/textColor"/>
       <CheckBox
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/statusOfLocation"
           android:text="Work from Home"
           android:layout_marginLeft="10dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="2">
           <TextView
               android:id="@+id/start"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:layout_weight="1"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:hint="Start Date"
               android:maxLines="1"
               android:background="@drawable/grey_button_color_changer"
               android:textColor="@color/textColor"
               android:drawableRight="@drawable/ic_calender"/>
           <TextView
               android:id="@+id/end"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:gravity="center_vertical"            android:padding="10dp"
               android:layout_weight="1"
               android:maxLines="1"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"            android:hint="End Date"
               android:background="@drawable/grey_button_color_changer"
               android:textColor="@color/textColor"
               android:drawableRight="@drawable/ic_calender"/>

       </LinearLayout>
       <CheckBox
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/statusOfDate"
           android:text="Currently working here"
           android:layout_marginLeft="10dp"/>
       <EditText
           android:id="@+id/description"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_marginTop="10dp"
           android:hint="Work Description"
           android:inputType="textMultiLine"
           android:lines="5"
           android:maxLength="250"
           android:gravity="start"
           android:scrollbars="vertical"
           android:background="@drawable/grey_button_color_changer"
           android:textColor="@color/textColor"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingRight="10dp"
           android:text="0/250"
           android:gravity="end"
           android:id="@+id/descriptionNo"/>

       <Button
           android:id="@+id/save"
           android:layout_width="wrap_content"
           android:background="@drawable/button_back"
           android:layout_height="wrap_content"
           android:text="Save"
           android:layout_margin="10dp"
           android:paddingLeft="80dp"
           android:layout_gravity="center_horizontal"
           android:paddingRight="80dp"
           android:textAllCaps="false"
           android:textColor="@color/windowColor"
           android:textSize="18sp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"/>

   </LinearLayout>

</ScrollView>