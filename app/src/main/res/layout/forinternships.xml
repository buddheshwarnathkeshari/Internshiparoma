<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="20dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        android:weightSum="6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/internshipdomain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:layout_alignParentStart="true"/>
            <ImageView
                android:id="@+id/companylogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="5dp">
            <TextView
                android:id="@+id/internshipcompanyname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/educationListColor"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/internshipstipend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/internshiplocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"
                android:text="Work from home"
                android:gravity="center_vertical"
                android:background="@drawable/bgforintern"
                android:drawableStart="@drawable/ic_location"
                />
            <TextView
                android:id="@+id/internshipduration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/bgforintern"
                android:text="3 months"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                />



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>